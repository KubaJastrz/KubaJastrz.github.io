{
  "name": "kubajastrz.com",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "preview": "astro preview",
    "format": "prettier --write --plugin-search-dir=. .",
    "astro": "astro"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "trailingComma": "all",
    "plugins": [
      "prettier-plugin-astro",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": "*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  },
  "dependencies": {
    "@astrojs/mdx": "^0.18.1",
    "@astrojs/rss": "^2.3.0",
    "@astrojs/sitemap": "^1.2.1",
    "@astrojs/tailwind": "^3.1.1",
    "@astrojs/vercel": "^3.2.1",
    "astro": "^2.1.3",
    "rehype-pretty-code": "^0.9.4",
    "shiki": "^0.14.1",
    "tailwindcss": "^3.2.7"
  },
  "devDependencies": {
    "prettier": "^2.8.4",
    "prettier-plugin-astro": "^0.8.0",
    "prettier-plugin-tailwindcss": "^0.2.5",
    "rollup": "^3.19.1",
    "typescript": "~5.0.2"
  }
}
